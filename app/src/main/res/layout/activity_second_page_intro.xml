<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context="com.example.ecoleenligne.Lancement.SecondPageIntro"
              android:background="@drawable/gradient">
    <ImageView
            android:layout_width="354dp"
            android:layout_height="150dp" app:srcCompat="@drawable/schoolicon" android:id="@+id/imageView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De la primaire au lycée, nous vous proposons un enseignement de qualité. Découvrez nos cours et exercices en un clique. "
            android:textSize="18sp" android:textColor="#FFFFFF" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" android:gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openThirdPage"
            android:text="Commencez !" tools:layout_marginTop="70dp"/>
</LinearLayout>